@{
    ViewData["Title"] = "Leave a Review";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Leave a Review</h2>
                        <p class="text-muted">Share your feedback for your appointment with Dr. Jane Smith.</p>
                    </div>

                    <!-- Professional Info -->
                    <div class="d-flex align-items-center bg-light rounded p-3 mb-4">
                        <img src="/images/dr-jane.jpg" class="rounded-circle me-3" alt="Professional" style="width: 60px; height: 60px; object-fit: cover;">
                        <div>
                            <h5 class="fw-bold mb-0">Dr. Jane Smith</h5>
                            <p class="text-muted mb-0">Cardiologist</p>
                        </div>
                    </div>

                    <form method="post" action="/Review/Submit">
                        <input type="hidden" name="appointmentId" value="1" />

                        <!-- Star Rating -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Your Rating</label>
                            <div class="star-rating">
                                <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="5 stars">★</label>
                                <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="4 stars">★</label>
                                <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="3 stars">★</label>
                                <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="2 stars">★</label>
                                <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="1 star">★</label>
                            </div>
                        </div>

                        <!-- Review Comment -->
                        <div class="mb-4">
                            <label for="comment" class="form-label fw-bold">Your Review</label>
                            <textarea id="comment" name="comment" class="form-control" rows="6" placeholder="Describe your experience, what you liked, and any areas for improvement." required></textarea>
                        </div>

                        <!-- Submission Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Submit Review</button>
                            <a href="/Appointment/List" class="btn btn-outline-secondary">Not Now</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .star-rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-end;
            font-size: 2.5rem;
            color: #d3d3d3;
        }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            cursor: pointer;
            transition: color 0.2s;
        }

        .star-rating input:checked ~ label,
        .star-rating:not(:checked) > label:hover,
        .star-rating:not(:checked) > label:hover ~ label {
            color: #ffc107;
        }
    </style>
}
