@model User
@{
    ViewData["Title"] = "My Profile";
}

<!-- Profile Header -->
<section class="profile-header py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Profile</li>
                    </ol>
                </nav>
                <h1 class="display-4 fw-bold mb-2 gradient-text">My Profile</h1>
                <p class="lead text-muted">Manage your personal information and preferences</p>
            </div>
            <div class="col-md-4 text-md-end">
                <button type="button" class="btn btn-gradient btn-lg" onclick="toggleEditMode()" style="border-radius: 15px;">
                    <i class="bi bi-pencil"></i> Edit Profile
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Profile Content -->
<section class="profile-content py-5">
    <div class="container">
        <div class="row">
            <!-- Profile Card -->
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-lg" style="border-radius: 25px;">
                    <div class="card-body p-4 text-center">
                        <div class="profile-avatar mb-3 position-relative">
                            @if (!string.IsNullOrEmpty(Model.PhotoURL))
                            {
                                <img src="@Model.PhotoURL" alt="Profile Photo" class="profile-photo" id="profilePhoto">
                            }
                            else
                            {
                                <i class="bi bi-person-circle"></i>
                            }
                            <div class="upload-overlay">
                                <button type="button" class="btn btn-light btn-sm" onclick="document.getElementById('photoUpload').click()">
                                    <i class="bi bi-camera"></i> Change Photo
                                </button>
                            </div>
                        </div>
                        <input type="file" id="photoUpload" accept="image/*" style="display: none;" onchange="uploadPhoto()">
                        <h4 class="fw-bold mb-1">@Model.Name</h4>
                        <p class="text-muted mb-3">@Model.UserType</p>
                        <div class="profile-stats">
                            <div class="stat-item">
                                <h5 class="fw-bold text-gradient mb-0">0</h5>
                                <small class="text-muted">Appointments</small>
                            </div>
                            <div class="stat-item">
                                <h5 class="fw-bold text-gradient mb-0">0</h5>
                                <small class="text-muted">Reviews</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Quick Actions -->
                <div class="card border-0 shadow mt-4" style="border-radius: 25px;">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">Quick Actions</h5>
                        <div class="d-grid gap-2">
                            <a href="/Appointment/List" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-calendar"></i> My Appointments
                            </a>
                            <a href="/Professional/List" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-search"></i> Find Professionals
                            </a>
                            @if (Model.UserType == "Professional")
                            {
                                <a href="/Professional/Dashboard" class="btn btn-gradient btn-lg">
                                    <i class="bi bi-speedometer2"></i> Professional Dashboard
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Profile Details -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg" style="border-radius: 25px;">
                    <div class="card-body p-5">
                        <form id="profileForm" method="post" asp-action="UpdateProfile">
                            <div class="row">
                                <!-- Basic Information -->
                                <div class="col-12">
                                    <h5 class="fw-bold mb-4 text-gradient">Basic Information</h5>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Full Name</label>
                                    <input type="text" class="form-control form-control-lg" name="Name" value="@Model.Name" readonly>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Email Address</label>
                                    <input type="email" class="form-control form-control-lg" name="Email" value="@Model.Email" readonly>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Phone Number</label>
                                    <input type="tel" class="form-control form-control-lg" name="Phone" value="@Model.Phone" readonly>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">User Type</label>
                                    <input type="text" class="form-control form-control-lg" value="@Model.UserType" readonly>
                                </div>
                                
                                <!-- Location Information -->
                                <div class="col-12 mt-4">
                                    <h5 class="fw-bold mb-4 text-gradient">Location Information</h5>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">City</label>
                                    <input type="text" class="form-control form-control-lg" name="City" value="@Model.City" readonly>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Country</label>
                                    <input type="text" class="form-control form-control-lg" name="Country" value="@Model.Country" readonly>
                                </div>
                                
                                <!-- Professional Information (if applicable) -->
                                @if (Model.UserType == "Professional")
                                {
                                    <div class="col-12 mt-4">
                                        <h5 class="fw-bold mb-4 text-gradient">Professional Information</h5>
                                    </div>
                                    
                                    <div class="col-12 mb-3">
                                        <label class="form-label fw-semibold">Specialization</label>
                                        <input type="text" class="form-control form-control-lg" name="Specialization" value="@Model.Specialization" readonly>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-semibold">Years of Experience</label>
                                        <input type="number" class="form-control form-control-lg" name="Experience" value="@Model.Experience" readonly>
                                    </div>
                                    
                                    <div class="col-12 mb-3">
                                        <label class="form-label fw-semibold">Professional Summary</label>
                                        <textarea class="form-control" rows="4" name="Bio" readonly placeholder="Tell us about your professional background and expertise..."></textarea>
                                    </div>
                                }
                                
                                <!-- Form Actions -->
                                <div class="col-12 mt-5" id="formActions" style="display: none;">
                                    <div class="d-flex gap-3">
                                        <button type="submit" class="btn btn-gradient btn-lg px-5">
                                            <i class="bi bi-check"></i> Save Changes
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary btn-lg px-5" onclick="toggleEditMode()">
                                            <i class="bi bi-x"></i> Cancel
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Account Settings -->
                <div class="card border-0 shadow mt-4" style="border-radius: 25px;">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-gradient">Account Settings</h5>
                        <div class="d-flex gap-3 flex-wrap">
                            <a href="/Account/ChangePassword" class="btn btn-outline-primary">
                                <i class="bi bi-lock"></i> Change Password
                            </a>
                            <button type="button" class="btn btn-outline-danger" onclick="confirmDelete()">
                                <i class="bi bi-trash"></i> Delete Account
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Custom Styles -->
<style>
    .profile-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    }
    
    .profile-avatar {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 4rem;
        margin: 0 auto;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .profile-photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }
    
    .upload-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 50%;
    }
    
    .profile-avatar:hover .upload-overlay {
        opacity: 1;
    }
    
    .profile-stats {
        display: flex;
        justify-content: space-around;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
    }
    
    .stat-item {
        text-align: center;
    }
    
    .text-gradient {
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .form-control[readonly] {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        cursor: not-allowed;
    }
    
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .shadow-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15) !important;
    }
    
    .btn-gradient {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        color: white !important;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }
    
    .btn-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    }
</style>

<!-- JavaScript -->
<script>
    function toggleEditMode() {
        const form = document.getElementById('profileForm');
        const inputs = form.querySelectorAll('input:not([readonly]), textarea');
        const formActions = document.getElementById('formActions');
        const editButton = event.target;
        
        if (inputs[0].hasAttribute('readonly')) {
            // Enable edit mode
            inputs.forEach(input => input.removeAttribute('readonly'));
            formActions.style.display = 'block';
            editButton.innerHTML = '<i class="bi bi-eye"></i> View Mode';
        } else {
            // Disable edit mode
            inputs.forEach(input => input.setAttribute('readonly', 'true'));
            formActions.style.display = 'none';
            editButton.innerHTML = '<i class="bi bi-pencil"></i> Edit Profile';
        }
    }
    
    function confirmDelete() {
        if (confirm('Are you sure you want to delete your account? This action cannot be undone.')) {
            // Implement delete account logic
            alert('Account deletion feature will be implemented soon.');
        }
    }
    
    function uploadPhoto() {
        const fileInput = document.getElementById('photoUpload');
        const file = fileInput.files[0];
        
        if (file) {
            // Validate file type and size
            const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
            const maxSize = 5 * 1024 * 1024; // 5MB
            
            if (!validTypes.includes(file.type)) {
                alert('Please select a valid image file (JPEG, JPG, or PNG).');
                return;
            }
            
            if (file.size > maxSize) {
                alert('File size must be less than 5MB.');
                return;
            }
            
            // Create FormData and upload
            const formData = new FormData();
            formData.append('photo', file);
            
            fetch('/Account/UploadProfilePhoto', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Update profile photo
                    const profilePhoto = document.getElementById('profilePhoto');
                    if (profilePhoto) {
                        profilePhoto.src = data.photoUrl;
                    } else {
                        // Create new img element if it doesn't exist
                        const avatar = document.querySelector('.profile-avatar');
                        avatar.innerHTML = `<img src="${data.photoUrl}" alt="Profile Photo" class="profile-photo" id="profilePhoto">`;
                    }
                    alert('Profile photo updated successfully!');
                } else {
                    alert('Error uploading photo: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error uploading photo. Please try again.');
            });
        }
    }
</script>