@model ProMeet.Models.Review

@{
    ViewData["Title"] = "Leave a Review";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Leave a Review</h2>
                        <p class="text-muted">Share your feedback for your experience with @ViewBag.ProfessionalName.</p>
                    </div>

                    <!-- Professional Info -->
                    <div class="d-flex align-items-center bg-light rounded p-3 mb-4">
                        <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center me-3" style="width: 60px; height: 60px; font-size: 1.5rem;">
                            @((ViewBag.ProfessionalName as string)?.Length > 0 ? (ViewBag.ProfessionalName as string).Substring(0, 1) : "P")
                        </div>
                        <div>
                            <h5 class="fw-bold mb-0">@ViewBag.ProfessionalName</h5>
                            <p class="text-muted mb-0">Professional</p>
                        </div>
                    </div>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProfessionalID" />
                        
                        <!-- Star Rating -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Your Rating</label>
                            <div class="rating-stars text-warning" style="font-size: 1.5rem;">
                                <i class="bi bi-star" data-value="1"></i>
                                <i class="bi bi-star" data-value="2"></i>
                                <i class="bi bi-star" data-value="3"></i>
                                <i class="bi bi-star" data-value="4"></i>
                                <i class="bi bi-star" data-value="5"></i>
                            </div>
                            <input type="hidden" asp-for="Rating" id="ratingInput" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <!-- Review Text -->
                        <div class="mb-4">
                            <label asp-for="Comment" class="form-label fw-bold">Review</label>
                            <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Tell us about your experience..."></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Submit Review</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            // Function to update star visuals
            function updateStars(rating) {
                $('.rating-stars i').each(function(index) {
                    var starValue = index + 1;
                    if (starValue <= rating) {
                        $(this).removeClass('bi-star text-muted').addClass('bi-star-fill text-warning');
                    } else {
                        $(this).removeClass('bi-star-fill text-warning').addClass('bi-star text-muted');
                    }
                });
            }

            $('.rating-stars i').hover(
                function () {
                    var hoverValue = $(this).data('value');
                    updateStars(hoverValue);
                },
                function () {
                    var rating = $('#ratingInput').val();
                    if (!rating) {
                        $('.rating-stars i').removeClass('bi-star-fill text-warning').addClass('bi-star text-muted');
                    } else {
                        updateStars(rating);
                    }
                }
            );

            $('.rating-stars i').click(function () {
                var rating = $(this).data('value');
                $('#ratingInput').val(rating);
                updateStars(rating);
            });
        });
    </script>
}

