@model ProMeet.Models.Service

@{ 
    ViewData["Title"] = "Edit Service";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Service</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditService">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="ServiceID" />
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Service Name" />
                            <label asp-for="Name">Service Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" style="height: 100px" placeholder="Description"></textarea>
                            <label asp-for="Description">Description</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Price" />
                            <label asp-for="Price">Price ($)</label>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                            <a asp-action="ManageServices" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}