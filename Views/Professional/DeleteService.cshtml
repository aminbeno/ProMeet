@model ProMeet.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
                <div class="card-header bg-white p-5 text-center border-0">
                    <div class="mb-4">
                        <div class="icon-circle bg-danger bg-opacity-10 text-danger mx-auto d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; border-radius: 50%;">
                            <i class="bi bi-exclamation-triangle-fill fs-1"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold text-dark mb-2">Delete Service?</h2>
                    <p class="text-muted mb-0">This action cannot be undone. Are you sure you want to remove this service?</p>
                </div>
                
                <div class="card-body p-4 bg-light bg-opacity-50">
                    <div class="card border-0 shadow-sm mb-4" style="border-radius: 15px;">
                        <div class="card-body p-4">
                            <h5 class="card-title fw-bold text-dark mb-3">@Model.Name</h5>
                            
                            <div class="mb-3">
                                <label class="text-muted small text-uppercase fw-bold mb-1">Description</label>
                                <p class="mb-0">@Model.Description</p>
                            </div>
                            
                            <div class="mb-3">
                                <label class="text-muted small text-uppercase fw-bold mb-1">Price</label>
                                <p class="mb-0 fw-bold text-primary">@Model.Price DH</p>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="DeleteService" class="d-grid gap-2">
                        <input type="hidden" asp-for="ServiceID" />
                        <button type="submit" class="btn btn-danger btn-lg" style="border-radius: 12px;">
                            <i class="bi bi-trash me-2"></i>Delete Service
                        </button>
                        <a asp-action="ManageServices" class="btn btn-light btn-lg text-muted" style="border-radius: 12px;">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>