@model ProMeet.Models.Professional

@{
    ViewData["Title"] = "Professional Dashboard";
}

<div class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Welcome back, @Model.User.Name!</h2>
            <p class="text-muted">Here's a snapshot of your professional activity.</p>
        </div>
        <div class="d-flex gap-2">
            <a href="/Professional/ManageProfile" class="btn btn-primary">
                <i class="bi bi-gear-fill me-1"></i> Manage Profile
            </a>
            <a href="/Availability/Manage" class="btn btn-outline-primary">
                <i class="bi bi-calendar-plus-fill me-1"></i> Set Availability
            </a>
        </div>
    </div>

    <!-- Dashboard Stats -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="bi bi-calendar-check-fill fs-4"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0">12</h4>
                        <p class="text-muted mb-0">Upcoming</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-success text-white rounded-3 d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="bi bi-check-circle-fill fs-4"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0">88</h4>
                        <p class="text-muted mb-0">Completed</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-warning text-white rounded-3 d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="bi bi-star-fill fs-4"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0">@Model.Rating</h4>
                        <p class="text-muted mb-0">Avg. Rating</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-info text-white rounded-3 d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="bi bi-cash-stack fs-4"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0">$1,250</h4>
                        <p class="text-muted mb-0">Earnings</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row g-5">
        <!-- Upcoming Appointments -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-3">
                    <h5 class="fw-bold">Upcoming Appointments</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <!-- Appointment Item -->
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <div class="d-flex align-items-center">
                                <img src="https://randomuser.me/api/portraits/men/32.jpg" class="rounded-circle me-3" style="width: 45px; height: 45px; object-fit: cover;" />
                                <div>
                                    <h6 class="fw-bold mb-0">John Doe</h6>
                                    <p class="text-muted small mb-0">Nov 12, 2025 - 10:00 AM</p>
                                </div>
                            </div>
                            <div>
                                <span class="badge bg-light text-primary me-2">Confirmed</span>
                                <a href="#" class="btn btn-sm btn-outline-secondary">Details</a>
                            </div>
                        </div>
                        <!-- Appointment Item -->
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <div class="d-flex align-items-center">
                                <img src="https://randomuser.me/api/portraits/women/44.jpg" class="rounded-circle me-3" style="width: 45px; height: 45px; object-fit: cover;" />
                                <div>
                                    <h6 class="fw-bold mb-0">Sarah Wilson</h6>
                                    <p class="text-muted small mb-0">Nov 13, 2025 - 2:00 PM</p>
                                </div>
                            </div>
                            <div>
                                <span class="badge bg-light text-warning me-2">Pending</span>
                                <a href="#" class="btn btn-sm btn-success">Accept</a>
                                <a href="#" class="btn btn-sm btn-danger">Decline</a>
                            </div>
                        </div>
                        <!-- Appointment Item -->
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <div class="d-flex align-items-center">
                                <img src="https://randomuser.me/api/portraits/men/46.jpg" class="rounded-circle me-3" style="width: 45px; height: 45px; object-fit: cover;" />
                                <div>
                                    <h6 class="fw-bold mb-0">Ahmed Alami</h6>
                                    <p class="text-muted small mb-0">Nov 14, 2025 - 11:00 AM</p>
                                </div>
                            </div>
                            <div>
                                <span class="badge bg-light text-primary me-2">Confirmed</span>
                                <a href="#" class="btn btn-sm btn-outline-secondary">Details</a>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <a href="/Appointment/List" class="text-primary fw-bold">View All Appointments</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile & Quick Actions -->
        <div class="col-lg-4">
            <!-- Profile Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body text-center">
                    <img src="@Model.User.PhotoURL" class="rounded-circle mb-3" alt="@Model.User.Name" style="width: 100px; height: 100px; object-fit: cover;">
                    <h5 class="fw-bold">@Model.User.Name</h5>
                    <p class="text-primary mb-2">@Model.JobTitle</p>
                    <p class="text-muted small">@Model.Specialty</p>
                    <hr>
                    <div class="d-flex justify-content-around align-items-center">
                        @if (Model.IsValidated)
                        {
                            <span class="badge bg-success-soft text-success"><i class="bi bi-patch-check-fill me-1"></i> Verified</span>
                        }
                        else
                        {
                            <span class="badge bg-warning-soft text-warning"><i class="bi bi-clock-fill me-1"></i> Pending</span>
                        }
                        
                        @if (Model.ProfileActive)
                        {
                            <span class="badge bg-info-soft text-info"><i class="bi bi-eye-fill me-1"></i> Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary-soft text-secondary"><i class="bi bi-eye-slash-fill me-1"></i> Hidden</span>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-3">
                    <h5 class="fw-bold">Quick Links</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="/Review/List" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-star-fill me-2 text-warning"></i> My Reviews</span>
                            <span class="badge bg-primary rounded-pill">23</span>
                        </a>
                        <a href="/Analytics/Report" class="list-group-item list-group-item-action">
                            <i class="bi bi-bar-chart-line-fill me-2 text-success"></i> View Analytics
                        </a>
                        <a href="/Support/Help" class="list-group-item list-group-item-action">
                            <i class="bi bi-question-circle-fill me-2 text-info"></i> Help & Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
