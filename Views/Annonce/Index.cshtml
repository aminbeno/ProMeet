@model IEnumerable<ProMeet.Models.Annonce>

@{ 
    ViewData["Title"] = "My Annonces";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">My Annonces</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New
        </a>
    </div>

    <div class="row g-4">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Title</h5>
                            <p class="card-text text-muted">@item.Category</p>
                            <p class="card-text text-muted">@item.Specialty</p>
                            <p class="card-text text-muted">@item.Description</p>
                            <ul class="list-unstyled d-flex flex-wrap gap-3 small mb-0">
                                <li><i class="bi bi-briefcase text-primary"></i> @item.YearsOfExperience years</li>
                                <li><i class="bi bi-geo-alt text-success"></i> @item.Location</li>
                                <li><i class="bi bi-clock text-info"></i> @item.Availability</li>
                            </ul>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center p-5 card-dashed">
                    <i class="bi bi-journal-x display-4 text-muted"></i>
                    <h4 class="mt-4 fw-bold">No Annonces Found</h4>
                    <p class="text-muted mb-4">Create your first annonce to get started.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Create New Annonce
                    </a>
                </div>
            </div>
        }
    </div>
</div>