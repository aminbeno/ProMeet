@model Professional

@{ 
    ViewData["Title"] = "Manage Profile";
}

<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <nav class="nav nav-borders">
        <a class="nav-link active ms-0" href="/Professional/ManageProfile">Profile</a>
        <a class="nav-link" href="/Professional/ManageServices">Services</a>
        <a class="nav-link" href="/Account/Security">Security</a>
        <a class="nav-link" href="/Notification/Index">Notifications</a>
    </nav>
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img id="profile-picture" class="img-account-profile rounded-circle mb-2" src="@(Model.User?.PhotoURL ?? "/images/avatar.png")" alt="" style="width: 150px; height: 150px; object-fit: cover;">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
                    <input type="file" id="file-input" style="display: none;" accept="image/jpeg, image/jpg, image/png">
                    <button id="upload-button" class="btn btn-primary" type="button">Upload new image</button>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                    <form asp-action="ManageProfile" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="User.Id" />
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputUsername">Full Name</label>
                            <input class="form-control" id="inputUsername" type="text" placeholder="Enter your full name" asp-for="User.Name">
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputOrgName">Specialty</label>
                                <input class="form-control" id="inputOrgName" type="text" placeholder="Enter your organization name" asp-for="Specialty">
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLocation">Location</label>
                                <input class="form-control" id="inputLocation" type="text" placeholder="Enter your location" asp-for="User.City">
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputEmailAddress">Email address</label>
                            <input class="form-control" id="inputEmailAddress" type="email" placeholder="Enter your email address" asp-for="User.Email">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputPhone">Phone number</label>
                                <input class="form-control" id="inputPhone" type="tel" placeholder="Enter your phone number" asp-for="User.Phone">
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputExperience">Experience</label>
                                <input class="form-control" id="inputExperience" type="text" name="Experience" placeholder="Enter your experience" asp-for="Experience">
                            </div>
                        </div>
                        <!-- Form Row -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (Price)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputPrice">Base Consultation Price (DH)</label>
                                <input class="form-control" id="inputPrice" type="number" step="0.01" name="Price" placeholder="Enter base price" asp-for="Price">
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="submit">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Trigger file input when 'Upload new image' button is clicked
            $('#upload-button').on('click', function() {
                $('#file-input').click();
            });

            // Handle file selection and upload
            $('#file-input').on('change', function() {
                var file = this.files[0];
                if (file) {
                    // Validate file type
                    var validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if ($.inArray(file.type, validTypes) < 0) {
                        alert('Invalid file type. Please select a JPG, JPEG, or PNG file.');
                        return;
                    }

                    // Validate file size (max 5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File size must be less than 5MB.');
                        return;
                    }

                    var formData = new FormData();
                    formData.append('photo', file);

                    $.ajax({
                        url: '/Account/UploadProfilePhoto',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function(response) {
                            if (response.success) {
                                // Update profile picture source
                                $('#profile-picture').attr('src', response.photoUrl);
                                alert('Profile photo uploaded successfully!');
                            } else {
                                alert('Error uploading photo: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('An unexpected error occurred. Please try again.');
                        }
                    });
                }
            });
        });
    </script>
}