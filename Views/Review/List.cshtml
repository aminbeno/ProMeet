@model IEnumerable<ProMeet.Models.Review>

@{ 
    ViewData["Title"] = "Client Reviews";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-star-fill text-warning"></i> Client Reviews</h2>
        <a asp-controller="Professional" asp-action="Dashboard" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You don't have any reviews yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model) {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    @if(!string.IsNullOrEmpty(item.Client?.PhotoURL))
                                    {
                                        <img src="@item.Client.PhotoURL" alt="@item.Client.Name" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white rounded-circle me-2 d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    }
                                    <div>
                                        <h6 class="mb-0 fw-bold">@(item.Client?.Name ?? "Anonymous")</h6>
                                        <small class="text-muted">@item.DateProvided.ToShortDateString()</small>
                                    </div>
                                </div>
                                <div class="text-warning">
                                    @for(int i=0; i<item.Rating; i++)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    @for(int i=item.Rating; i<5; i++)
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                </div>
                            </div>
                            <p class="card-text mt-3">"@item.Comment"</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-end">
                            <a asp-action="Details" asp-route-id="@item.ReviewID" class="btn btn-sm btn-outline-secondary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>