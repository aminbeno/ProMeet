@model ProMeet.ViewModels.ProfessionalDashboardViewModel
@{
    ViewData["Title"] = "Professional Dashboard";
}

<style>
    :root {
        --deep-blue: #0a192f;
        --primary-blue: #007bff;
        --primary-purple: #6f42c1;
        --green: #2ecc71;
        --amber: #f1c40f;
    }

    .dashboard-header {
        background: linear-gradient(135deg, var(--deep-blue) 0%, #1a2a40 100%);
        color: white;
        padding: 3rem 0;
        margin-bottom: 3rem;
        border-radius: 0 0 30px 30px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .stat-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        height: 100%;
        background: white;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .bg-blue-light { background-color: rgba(0, 123, 255, 0.1); color: var(--primary-blue); }
    .bg-purple-light { background-color: rgba(111, 66, 193, 0.1); color: var(--primary-purple); }
    .bg-green-light { background-color: rgba(46, 204, 113, 0.1); color: var(--green); }
    .bg-amber-light { background-color: rgba(241, 196, 15, 0.1); color: var(--amber); }

    .appointment-card {
        border: none;
        border-radius: 15px;
        background: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.03);
        margin-bottom: 1rem;
        transition: all 0.2s ease;
        border-left: 5px solid transparent;
    }

    .appointment-card:hover {
        transform: translateX(5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
    }
    
    .appointment-card.status-Pending { border-left-color: var(--amber); }
    .appointment-card.status-Confirmed { border-left-color: var(--green); }
    .appointment-card.status-Cancelled { border-left-color: #dc3545; }
    .appointment-card.status-Completed { border-left-color: var(--primary-blue); }

    .section-title {
        font-weight: 700;
        color: var(--deep-blue);
        margin-bottom: 1.5rem;
        position: relative;
        padding-left: 15px;
    }

    .section-title::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 5px;
        height: 25px;
        background: var(--primary-blue);
        border-radius: 5px;
    }
</style>

<!-- Welcome Header -->
<div class="dashboard-header">
    <div class="container">
        <div class="d-flex align-items-center">
            <div class="position-relative">
                <img src="@(Model.Professional.User?.PhotoURL ?? "/images/default-avatar.png")" alt="Profile" 
                     class="rounded-circle border border-4 border-white shadow" 
                     style="width: 100px; height: 100px; object-fit: cover;" />
                @if(Model.Professional.IsValidated)
                {
                    <div class="position-absolute bottom-0 end-0 bg-white rounded-circle p-1" title="Verified Professional">
                        <i class="bi bi-patch-check-fill text-primary fs-4"></i>
                    </div>
                }
            </div>
            <div class="ms-4 text-white">
                <h1 class="h2 fw-bold mb-1">Welcome back, @(Model.Professional.User?.Name ?? "Professional")!</h1>
                <p class="mb-0 opacity-75">
                    <i class="bi bi-briefcase me-2"></i>@Model.Professional.JobTitle 
                    <span class="mx-2">|</span> 
                    <i class="bi bi-star-fill text-warning me-1"></i> @Model.AverageRating.ToString("0.0") (@Model.ReviewsCount reviews)
                </p>
            </div>
            <div class="ms-auto d-none d-lg-block">
                <a asp-action="ManageServices" class="btn btn-light rounded-pill px-4 fw-bold text-primary shadow-sm me-2">
                    <i class="bi bi-gear me-2"></i>Manage Services
                </a>
                <a asp-controller="Availability" asp-action="Manage" class="btn btn-outline-light rounded-pill px-4 fw-bold">
                    <i class="bi bi-calendar-check me-2"></i>Availability
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <!-- Summary Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4">
                <div class="stat-icon bg-blue-light mb-3">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <h3 class="fw-bold text-dark mb-0">@Model.UpcomingAppointmentsCount</h3>
                <p class="text-muted mb-0">Upcoming Appointments</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4">
                <div class="stat-icon bg-purple-light mb-3">
                    <i class="bi bi-people"></i>
                </div>
                <h3 class="fw-bold text-dark mb-0">@Model.TotalClients</h3>
                <p class="text-muted mb-0">Total Clients</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4">
                <div class="stat-icon bg-amber-light mb-3">
                    <i class="bi bi-star"></i>
                </div>
                <h3 class="fw-bold text-dark mb-0">@Model.AverageRating.ToString("0.0")</h3>
                <p class="text-muted mb-0">Average Rating</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <a asp-controller="Review" asp-action="List" class="text-decoration-none d-block h-100">
                <div class="stat-card p-4">
                    <div class="stat-icon bg-green-light mb-3">
                        <i class="bi bi-chat-quote"></i>
                    </div>
                    <h3 class="fw-bold text-dark mb-0">@Model.ReviewsCount</h3>
                    <p class="text-muted mb-0">Total Reviews</p>
                </div>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <h4 class="section-title">Recent Appointments</h4>
            
            @if(Model.RecentAppointments.Any())
            {
                @foreach(var appointment in Model.RecentAppointments)
                {
                    <div class="appointment-card status-@appointment.Status p-3">
                        <div class="d-flex align-items-center">
                            <div class="date-box text-center me-3 bg-light rounded p-2" style="min-width: 60px;">
                                <span class="d-block fw-bold text-dark h5 mb-0">@appointment.Date.Day</span>
                                <span class="d-block small text-uppercase text-muted">@appointment.Date.ToString("MMM")</span>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="fw-bold mb-1">@(appointment.ServiceName ?? appointment.ReasonForVisit ?? "General Consultation")</h6>
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-clock me-1"></i> @appointment.Date.ToString("t") 
                                    <span class="mx-2">â€¢</span>
                                    <i class="bi bi-person me-1"></i> @(appointment.Client?.Name ?? "Client")
                                </p>
                            </div>
                            <div class="text-end">
                                <span class="badge rounded-pill bg-@(appointment.Status.ToString() == "Confirmed" ? "success" : (appointment.Status.ToString() == "Pending" ? "warning" : "secondary"))">
                                    @appointment.Status
                                </span>
                                <div class="mt-1 small fw-bold text-muted">@appointment.Price.ToString("N0") DH</div>
                                <div class="mt-2">
                                    <a asp-controller="Appointment" asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-link text-decoration-none p-0">Details <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
                <div class="text-center mt-3">
                    <a asp-controller="Appointment" asp-action="Manage" class="btn btn-outline-primary rounded-pill px-4">View All Appointments</a>
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-light rounded-3">
                    <i class="bi bi-calendar-x text-muted fs-1 mb-3"></i>
                    <p class="text-muted">No appointments found.</p>
                </div>
            }
        </div>
        
        <div class="col-lg-4">
            <h4 class="section-title">Quick Actions</h4>
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="list-group list-group-flush">
                    <a asp-action="CreateService" class="list-group-item list-group-item-action p-3 d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3">
                            <i class="bi bi-plus-lg"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Add New Service</h6>
                            <small class="text-muted">Expand your offerings</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted"></i>
                    </a>
                    <a asp-controller="Availability" asp-action="Manage" class="list-group-item list-group-item-action p-3 d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 text-success rounded-circle p-2 me-3">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Update Availability</h6>
                            <small class="text-muted">Manage your schedule</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted"></i>
                    </a>
                    <a asp-action="ManageProfile" class="list-group-item list-group-item-action p-3 d-flex align-items-center">
                        <div class="bg-info bg-opacity-10 text-info rounded-circle p-2 me-3">
                            <i class="bi bi-person-lines-fill"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Edit Profile</h6>
                            <small class="text-muted">Update your bio & info</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>