                <a href="/Account/Register" class="btn btn-outline-primary btn-lg px-4">
                    <i class="bi bi-person-plus"></i> Join as Professional
                </a>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <div class="floating-card">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                </div>
            </div>
