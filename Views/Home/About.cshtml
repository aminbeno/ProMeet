@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<section class="about-hero py-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4 gradient-text">About ProMeet</h1>
                <p class="lead text-muted mb-4">
                    Connecting professionals with clients through seamless appointment scheduling and management. 
                    Our platform makes it easy to find, book, and manage professional services.
                </p>
                <div class="hero-stats row g-4 mb-4">
                    <div class="col-4 text-center">
                        <div class="stat-number">10K+</div>
                        <div class="stat-label">Professionals</div>
                    </div>
                    <div class="col-4 text-center">
                        <div class="stat-number">50K+</div>
                        <div class="stat-label">Happy Clients</div>
                    </div>
                    <div class="col-4 text-center">
                        <div class="stat-number">100K+</div>
                        <div class="stat-label">Appointments</div>
                    </div>
                </div>
