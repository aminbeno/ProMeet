    }
    
    .appointment-datetime .time {
        font-size: 0.9rem;
    }
</style>

<!-- JavaScript -->
<script>
    function filterAppointments() {
        const statusFilter = document.getElementById('statusFilter').value;
        const dateFilter = document.getElementById('dateFilter').value;
        const rows = document.querySelectorAll('.appointment-row');
        
        rows.forEach(row => {
            const status = row.getAttribute('data-status');
            const date = row.getAttribute('data-date');
            
            const statusMatch = !statusFilter || status === statusFilter;
            const dateMatch = !dateFilter || date === dateFilter;
            
            if (statusMatch && dateMatch) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }
    
    function resetFilters() {
        document.getElementById('statusFilter').value = '';
        document.getElementById('dateFilter').value = '';
        filterAppointments();
    }
    
    function updateStatus(appointmentId, newStatus) {
        if (confirm(`Are you sure you want to mark this appointment as ${newStatus.toLowerCase()}?`)) {
            // Implement status update logic
            alert(`Appointment ${appointmentId} status updated to ${newStatus}`);
            // In a real implementation, this would make an AJAX call to update the status
            location.reload();
        }
    }
</script>